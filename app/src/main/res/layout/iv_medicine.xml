<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/cardview_medicine_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.MaterialComponents.DayNight"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="2.5dp"
    android:layout_marginLeft="2.5dp"
    android:layout_marginRight="2.5dp"
    app:cardCornerRadius="5dp"
    app:strokeColor="#5571FF"
    >

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgv_medicine"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/medicines"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/txtv_medicine_name"
            android:layout_toRightOf="@id/imgv_medicine"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ace Plus | Tablet"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/txtv_medicine_features"
            android:layout_toRightOf="@id/imgv_medicine"
            android:layout_below="@+id/txtv_medicine_name"
            android:layout_marginLeft="5dp"
            android:text="Paracetamol and Caffeine"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#001463"
            android:maxLines="2"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/lay_6"
            android:layout_toRightOf="@id/imgv_medicine"
            android:layout_below="@+id/txtv_medicine_features"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Indication: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:maxLines="4"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/txtv_medicine_indication"
            android:layout_toRightOf="@id/imgv_medicine"
            android:layout_below="@+id/lay_6"
            android:textColor="#4A4A4A"
            android:layout_marginLeft="5dp"
            android:text="Indication: Fever, headache, migraine,Fever,Fever, headache, migraine,Fever, headache, migraine, muscle ache, backache, toothache and menstrual pain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLines="3"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/txtv_medicine_price"
            android:layout_toRightOf="@id/imgv_medicine"
            android:layout_alignBaseline="@+id/btn_medicine_add_or_remove"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:text="à§³ 2.5 pcs Tk"
            android:layout_marginTop="2.5dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_medicine_add_or_remove"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/txtv_medicine_price"
            android:layout_below="@+id/txtv_medicine_indication"
            android:layout_marginTop="5dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Add to cart"
            android:textColor="@color/bg_700"
            android:textAllCaps="false"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>