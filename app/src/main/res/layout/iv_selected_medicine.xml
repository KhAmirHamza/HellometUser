<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_medicine_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="2.5dp"
    android:theme="@style/Theme.MaterialComponents.DayNight"
    app:cardCornerRadius="5dp"
    app:strokeColor="#5571FF">

    <RelativeLayout
        android:padding="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtv_medicine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Ace Plus | Tablet"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/txtv_medicine_features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtv_medicine_name"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Paracetamol and Caffeine"
            android:layout_marginRight="10dp"
            android:textColor="#001463"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtv_medicine_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtv_medicine_features"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="à§³ 2.5 pcs Tk"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_toLeftOf="@+id/lay7"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="20dp"
            />


        <LinearLayout
            android:layout_below="@+id/txtv_medicine_features"
            android:id="@+id/lay7"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingRight="6dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/imgv_medicine_remove"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_remove_white_24dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_add_remove_button"
                android:scaleY=".8"/>

            <TextView
                android:id="@+id/txtv_selected_medicine_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="20sp" />
            <ImageView
                android:id="@+id/imgv_medicine_add"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_white_24dp"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_add_remove_button"
                android:scaleY=".8"
                />

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>