<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="2.5dp"
    android:layout_marginBottom="2.5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="5dp">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      >

       <RelativeLayout
           android:id="@+id/lay_pharmacy_1"
           android:layout_width="match_parent"
           android:layout_height="200dp">


           <ImageView
               android:id="@+id/imgv_pharmacy_image"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:scaleType="fitXY"/>



          <RelativeLayout
              android:id="@+id/lay_5"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_alignParentBottom="true"
              android:background="@color/black_transparent">


              <LinearLayout
                  android:id="@+id/lay_1"
                  android:paddingLeft="2.5dp"
                  android:layout_alignParentLeft="true"
                  android:layout_toLeftOf="@+id/lay_3"
                  android:layout_marginRight="5dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  >

                  <ImageView
                      android:id="@+id/imgv_pharmacy_icon"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/ic_outline_store_mall_directory_24"/>
                  <TextView
                      android:id="@+id/txtv_pharmacy_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="..."
                      android:textSize="16sp"
                      android:maxLines="1"
                      android:ellipsize="end"
                      android:textStyle="bold"
                      android:layout_marginLeft="5dp"
                      android:textColor="@color/white"/>


              </LinearLayout>

              <LinearLayout
                  android:id="@+id/lay_3"
                  android:layout_alignParentRight="true"
                  android:paddingRight="2.5dp"
                  android:gravity="center_vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
                  <ImageView
                      android:id="@+id/imgv_distance_icon"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/ic_baseline_double_arrow_24"/>
                  <TextView
                      android:id="@+id/txtv_pharmacy_distance"
                      android:text="..."
                      android:textSize="14sp"
                      android:textColor="@color/white"
                      android:textStyle="bold"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp"
                      />

              </LinearLayout>

              <LinearLayout
                  android:id="@+id/lay_2"
                  android:paddingLeft="2.5dp"
                  android:paddingRight="2.5dp"
                  android:layout_below="@id/lay_1"
                  android:layout_marginRight="5dp"
                  android:gravity="center_vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
                  <ImageView
                      android:id="@+id/imgv_address_icon"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/ic_outline_location_on_24"/>
                  <TextView
                      android:id="@+id/txtv_pharmacy_address"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="12sp"
                      android:layout_marginLeft="5dp"
                      android:textStyle="bold"
                      android:text="..."
                      android:textColor="@color/white"
                      />

              </LinearLayout>
          </RelativeLayout>

       </RelativeLayout>

   </RelativeLayout>


</androidx.cardview.widget.CardView>